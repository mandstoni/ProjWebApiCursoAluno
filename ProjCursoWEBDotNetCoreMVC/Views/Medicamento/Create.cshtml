@model CursoWebCoreMVC.Models.Medicamento

@{
    ViewData["Title"] = "Cadastar Medicamento";
}

<h1>Solicitar Medicamento</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeDosagem" class="control-label"></label>
                <input asp-for="UnidadeDosagem" class="form-control" />
                <span asp-validation-for="UnidadeDosagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enfermeiro" class="control-label"></label>
                <select asp-for="Enfermeiro" id="Enfermeiro" name="Enfermeiro" asp-items="@Model.Enfermeiros" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Enfermeiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
